@model BitirmeFriendyol.Models.ViewModels.UserLoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h4>Friendyola giriş yap veya üye ol, indirimleri kaçırma!</h4>
            <hr />
            <div class="card">
                <div class="card-header" style="background-color: lightgoldenrodyellow">
                    <h4>Hesabınıza Giriş Yapınız</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            @using (Html.BeginForm())
                            {
                                <div>
                                    @Html.LabelFor(model => model.Mail)
                                    @Html.EditorFor(model => model.Mail, new {htmlattributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Mail, null, new { @class = "text-danger"})
                                </div>
                                <div>
                                    @Html.LabelFor(model => model.Password)
                                    @Html.EditorFor(model => model.Password, new {htmlattributes = new {@class = "form-control"}})
                                    @Html.ValidationMessageFor(model => model.Password, null, new {@class = "text-danger"} )
                                </div>
                                <div class="mt-5">
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-warning">Giriş Yap</button>
                                    </div>
                                </div>
                            }
                        </div>  
                        <div class="col-md-6">
                            <img src="~/Images/GirisYapp1.jpg" class="img-thumbnail" style="background-color: lightgoldenrodyellow " /> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

